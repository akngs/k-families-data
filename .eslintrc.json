{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "no-console": "off",
        "no-use-before-define": [
          "error",
          { "functions": false, "classes": false, "variables": true }
        ]
    }
}
